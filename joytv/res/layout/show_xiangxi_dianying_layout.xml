<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/movie_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="22dp"
        layout="@layout/show_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:paddingLeft="50dp" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_zero"
            android:layout_weight="6.623"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="@dimen/layout_zero"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="25dp"
                android:paddingRight="8dp" >

                <include layout="@layout/show_pic_rating_item" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/layout_zero"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="25dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="@dimen/layout_zero"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/text_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:singleLine="true"
                            android:textColor="@color/text_bg_foucs"
                            android:textSize="25dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_over_time"
                        android:layout_width="@dimen/layout_zero"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|bottom"
                        android:visibility="invisible" 
                        android:focusable="false"
                        android:paddingRight="8dp">

                        <include
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            layout="@layout/show_timeover_item" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/xiangqing_daoyan_name"
                        android:textColor="@color/daoyan_name_color"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/text_directors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/daoyan_names_name_color"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/xiangqing_zhuyan_name"
                        android:textColor="@color/daoyan_name_color"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/text_starts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/daoyan_names_name_color"
                        android:textSize="20dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/xiangqing_juqingjianjie_name"
                    android:textColor="@color/daoyan_name_color"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/text_introduce"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:lineSpacingExtra="5dip"
                    android:maxLines="4"
                    android:textColor="@color/hot_content_content"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_zero"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="@dimen/layout_zero"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:paddingRight="8dp" >

                <LinearLayout
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.8" >

                    <Button
                        android:id="@+id/bt_xiangqingding"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/xiangqing_button_selector"
                        android:drawableLeft="@drawable/ding_selector"
                        android:gravity="right|center_vertical"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/ding_selector"
                        android:textSize="17dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.8" >

                    <Button
                        android:id="@+id/bt_xiangqing_xiai"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/xiangqing_button_selector"
                        android:drawableLeft="@drawable/xiai_selector"
                        android:gravity="right|center_vertical"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/ding_selector"
                        android:textSize="17dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/layout_zero"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:paddingLeft="20dp" >

                <LinearLayout
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingRight="25dp" >

                    <LinearLayout
                        android:id="@+id/ll_xiangqing_bofang_gaoqing"
                        android:layout_width="@dimen/layout_zero"
                        android:layout_height="match_parent"
                        android:layout_weight="4.8"
                        android:background="@drawable/xiangqing_button_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:longClickable="true"
                        android:paddingLeft="4dp" >

                        <Button
                            android:id="@+id/bt_xiangqing_bofang"
                            android:layout_width="@dimen/layout_zero"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:gravity="left|center_vertical"
                            android:text="@string/xiangqing_bofang"
                            android:textColor="@color/text_foucs"
                            android:textSize="17dp"
                            android:paddingLeft="3dp" 
                            android:clickable="false"
                            android:longClickable="false"/>

                        <Button
                            android:id="@+id/bt_xiangqing_gaoqing"
                            android:layout_width="@dimen/layout_zero"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="2"
                            android:background="@android:color/transparent"
                            android:drawableRight="@drawable/icon_play"
                            android:gravity="left|center_vertical"
                            android:paddingRight="4dp"
                            android:text="@string/gaoqing_chaogaoqing"
                            android:textColor="@color/text_foucs"
                            android:textSize="17dp"
                            android:clickable="false"
                            android:longClickable="false"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:visibility="invisible" >

                    <Button
                        android:id="@+id/bt_xiangqing_xiazai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_unuse"
                        android:gravity="center"
                        android:text="@string/xiangqing_xiazai"
                        android:textSize="17dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="2" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingRight="25dp" >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/bt_xiangqing_yingping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/yingping_button_selector"
                        android:gravity="center"
                        android:text="@string/xiangqing_yingping"
                        android:textColor="@color/text_foucs"
                        android:textSize="17dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_xiangqing_tuijiandianying"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_zero"
            android:layout_weight="6.23"
            android:background="@drawable/bg_teat_repeat"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl_xiangqing_hotline"
                android:layout_width="match_parent"
                android:layout_height="20dp" >

                <TextView
                    android:id="@+id/tv_dianyingtuijian"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="@string/xiangqing_tujiandianying" />

                <TextView
                    android:id="@+id/tv_hotline_1"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_toLeftOf="@id/tv_dianyingtuijian"
                    android:background="@color/hot_line" />

                <TextView
                    android:id="@+id/tv_hotline_2"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/tv_dianyingtuijian"
                    android:background="@color/hot_line"
                    android:gravity="center" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_xiangqing_gv_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rl_xiangqing_hotline"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" >

                <GridView
                    android:id="@+id/gv_xiangqing_tuijian"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:horizontalSpacing="24dp"
                    android:numColumns="6"
                    android:scrollbars="none" >
                </GridView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>