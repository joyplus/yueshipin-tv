<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/movie_bg"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingTop="15dp" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_zero"
        android:layout_weight="0.8"
        layout="@layout/show_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_zero"
        android:layout_weight="0.4"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/layout_zero"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/empty_margin_right"
            android:layout_weight="1" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/layout_zero"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@drawable/menubg"
            android:orientation="horizontal"
            android:paddingRight="50dp" >

            <TextView
                android:layout_width="@dimen/layout_zero"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/theme_name_margin"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/search_name"
                android:textColor="@color/text_orange"
                android:textSize="@dimen/theme_name_text_size" />

            <TextView
                android:layout_width="@dimen/layout_zero"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="2/123"
                android:textColor="@color/time_color"
                android:textSize="@dimen/jishu_text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_zero"
        android:layout_weight="6"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/layout_zero"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/empty_margin_right"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_zero"
                android:layout_weight="1.2" >

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/edit_vertical_margin"
                    android:layout_marginTop="@dimen/edit_vertical_margin"
                    android:background="@drawable/search_selector"
                    android:focusableInTouchMode="false"
                    android:hint="搜索"
                    android:paddingRight="@dimen/menu_horizontal_padding"
                    android:textSize="15sp" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_zero"
                android:layout_weight="15"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/layout_zero"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingRight="50dp" >

                <com.joyplus.tv.ui.MyMovieGridView
                    android:id="@+id/gv_search_show"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:listSelector="@android:color/black"
                    android:numColumns="5" >
                </com.joyplus.tv.ui.MyMovieGridView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>