<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="200dp"
	android:layout_height="wrap_content" android:gravity="center">

	<ProgressBar android:id="@+id/loading_process_dialog_progressBar"
		android:layout_width="40dp" 
		android:layout_height="40dp"
		android:indeterminate="false"
		android:indeterminateDrawable="@anim/progress_loading" />
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:gravity="center"
		android:text="@string/meidaplayer_loading_string_loadingprogress"
		android:textSize="26dp" />	
</LinearLayout>
