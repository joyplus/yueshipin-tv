<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/movie_bg"
    android:orientation="vertical"
    android:paddingTop="15dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_zero"
        android:layout_weight="0.8"
        android:paddingLeft="50dp" >

        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/show_head" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_zero"
        android:layout_weight="6.4"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_zero"
            android:layout_weight="9"
            android:orientation="horizontal"
            android:paddingLeft="50dp"
            android:paddingRight="50dp" >

            <LinearLayout
                android:layout_width="@dimen/layout_zero"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <include layout="@layout/show_pic_rating_item" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/layout_zero"
                android:layout_height="match_parent"
                android:layout_weight="4.9"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_zero"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="@dimen/layout_zero"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:text="@string/xiangqing_dianying_title_name"
                            android:textColor="@color/text_bg_foucs"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/layout_zero"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|bottom" >

                        <include
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            layout="@layout/show_timeover_item" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_zero"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/xiangqing_daoyan_name"
                        android:textColor="@color/daoyan_name_color"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/xiangqing_daoyan_names_name"
                        android:textColor="@color/daoyan_names_name_color"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_zero"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/xiangqing_zhuyan_name"
                        android:textColor="@color/daoyan_name_color"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/xiangqing_zhuyan_names_name"
                        android:textColor="@color/daoyan_names_name_color"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_zero"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/xiangqing_juqingjianjie_name"
                        android:textColor="@color/daoyan_name_color"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_zero"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/xiangqing_juqingjianjie_content"
                        android:textColor="@color/daoyan_names_name_color"
                        android:textSize="14dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_zero"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="50dp"
            android:paddingRight="50dp" >

            <LinearLayout
                android:layout_width="@dimen/layout_zero"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingRight="@dimen/xiangqing_ding_padding_right" >

                <LinearLayout
                    android:id="@+id/ll_xiangqingding"
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="4.8"
                    android:background="@drawable/xiangqing_button_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/iv_xiangqingding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ding_selector" />

                    <TextView
                        android:id="@+id/tv_xiangqingding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:text="8888"
                        android:textColor="@color/ding_selector" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_xiangqing_xiai"
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="4.8"
                    android:background="@drawable/xiangqing_button_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/iv_xiangqing_xiai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/xiai_selector" />

                    <TextView
                        android:id="@+id/tv_xiangqing_xiai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:text="8888"
                        android:textColor="@color/ding_selector" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/layout_zero"
                android:layout_height="match_parent"
                android:layout_weight="5" >

                <LinearLayout
                    android:id="@+id/ll_xiangqing_bofang_gaoqing"
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/xiangqing_button_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center" >

                    <LinearLayout
                        android:layout_width="@dimen/layout_zero"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2" >

                        <TextView
                            android:id="@+id/tv_xiangqing_bofang"
                            android:layout_width="@dimen/layout_zero"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="@string/xiangqing_bofang"
                            android:textColor="@color/text_foucs" />

                        <TextView
                            android:id="@+id/tv_xiangqing_gaoqing"
                            android:layout_width="@dimen/layout_zero"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="@string/gaoqing_biaoqing"
                            android:textColor="@color/text_foucs" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/layout_zero"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical" >

                        <ImageView
                            android:id="@+id/iv_xiangqing_bofang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_play" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/bt_xiangqing_xiazai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_unuse"
                        android:text="@string/xiangqing_xiazai" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="2" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/bt_xiangqing_yingping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/yingping_button_selector"
                        android:text="@string/xiangqing_yingping"
                        android:textColor="@color/text_foucs" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_xiangqing_tuijiandianying"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_zero"
            android:layout_marginTop="10dp"
            android:layout_weight="8.8"
            android:background="@drawable/bg_teat_repeat"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl_xiangqing_hotline"
                android:layout_width="match_parent"
                android:layout_height="30dp" >

                <TextView
                    android:id="@+id/tv_dianyingtuijian"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="@string/xiangqing_tujiandianying" />

                <TextView
                    android:id="@+id/tv_hotline_1"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/tv_dianyingtuijian"
                    android:background="@color/hot_line" />

                <TextView
                    android:id="@+id/tv_hotline_2"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/tv_dianyingtuijian"
                    android:background="@color/hot_line" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rl_xiangqing_hotline" >

                <ImageView
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/movie_pic" 
                    android:background="@drawable/text_drawable_selector"/>

                <ImageView
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/movie_pic" 
                    android:background="@drawable/text_drawable_selector"/>

                <ImageView
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/movie_pic" 
                    android:background="@drawable/text_drawable_selector"/>

                <ImageView
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/movie_pic" 
                    android:background="@drawable/text_drawable_selector"/>

                <ImageView
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/movie_pic" 
                    android:background="@drawable/text_drawable_selector"/>

                <ImageView
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/movie_pic" 
                    android:background="@drawable/text_drawable_selector"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>