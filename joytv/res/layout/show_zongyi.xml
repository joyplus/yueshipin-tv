<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/movie_bg"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingTop="15dp" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_zero"
        android:layout_weight="1"
        layout="@layout/show_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_zero"
        android:layout_weight="1.33"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/layout_zero"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/empty_margin_right"
            android:layout_weight="1" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/layout_zero"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="5.61"
            android:background="@drawable/menubg"
            android:orientation="horizontal"
            android:paddingRight="50dp" >

            <TextView
                android:layout_width="@dimen/layout_zero"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/theme_name_margin"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/zongyi_name"
                android:textColor="@color/text_active"
                android:textSize="@dimen/theme_name_text_size" />

            <TextView
                android:layout_width="@dimen/layout_zero"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textColor="@color/time_color"
                android:textSize="@dimen/jishu_text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_zero"
        android:layout_weight="15.17"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/layout_zero"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/empty_margin_right"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_zero"
                android:paddingTop="@dimen/edit_vertical_margin"
                android:paddingBottom="@dimen/edit_vertical_margin"
                android:layout_weight="1" >

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/search_selector"
                    android:focusableInTouchMode="false"
                    android:hint="搜索"
                    android:paddingRight="@dimen/menu_horizontal_padding"
                    android:textSize="15sp" 
                    android:singleLine="true">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_zero"
                android:layout_weight="15"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/bt_quanbufenlei"
                    style="@style/style_4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_zero"
                    android:layout_weight="1"
                    android:background="@drawable/text_drawable_selector"
                    android:gravity="right|center_vertical"
                    android:text="@string/quanbufenlei_name"
                    android:textColor="@color/text_color_selector" />

                <LinearLayout
                    android:id="@+id/ll_qinzidongman"
                    style="@style/style_6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_zero"
                    android:layout_weight="1" 
                    android:visibility="invisible">

                    <Button
                        android:id="@+id/bt_qinzidongman"
                        style="@style/style_5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/qinzidongman_play_name" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_rexuedongman"
                    style="@style/style_6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_zero"
                    android:layout_weight="1" 
                    android:visibility="invisible">

                    <Button
                        android:id="@+id/bt_rexuedongman"
                        style="@style/style_5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/rexuedongman_play_name" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_hougongdongman"
                    style="@style/style_6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_zero"
                    android:layout_weight="1" 
                    android:visibility="invisible">

                    <Button
                        android:id="@+id/bt_hougongdongman"
                        style="@style/style_5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/hougongdoangman_play_name" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_tuilidongman"
                    style="@style/style_6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_zero"
                    android:layout_weight="1" 
                    android:visibility="invisible">

                    <Button
                        android:id="@+id/bt_tuilidongman"
                        style="@style/style_5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/tuilidongman_play_name" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_jizhandongman"
                    style="@style/style_6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_zero"
                    android:layout_weight="1" 
                    android:visibility="invisible">

                    <Button
                        android:id="@+id/bt_jizhandongman"
                        style="@style/style_5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/jizhandongman_play_name" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_gaoxiaodongman"
                    style="@style/style_6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_zero"
                    android:layout_weight="1" 
                    android:visibility="invisible">

                    <Button
                        android:id="@+id/bt_gaoxiaodongman"
                        style="@style/style_5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/gaoxiaodongman_play_name" />
                </LinearLayout>

                <TextView
                    style="@style/style_4"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_zero"
                    android:layout_weight="3.73" />

                <Button
                    android:id="@+id/bt_zuijinguankan"
                    style="@style/style_4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_zero"
                    android:layout_weight="1"
                    android:background="@drawable/text_drawable_selector"
                    android:gravity="right|center_vertical"
                    android:text="@string/zuijinguankan_name"
                    android:textColor="@color/text_color_selector" />

                <Button
                    android:id="@+id/bt_zhuijushoucang"
                    style="@style/style_4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_zero"
                    android:layout_weight="1"
                    android:background="@drawable/text_drawable_selector"
                    android:gravity="right|center_vertical"
                    android:text="@string/zhuijushoucang_name"
                    android:textColor="@color/text_color_selector" />

                <Button
                    android:id="@+id/bt_lixianshipin"
                    style="@style/style_4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_zero"
                    android:layout_weight="1"
                    android:background="@drawable/text_drawable_selector"
                    android:gravity="right|center_vertical"
                    android:text="@string/lixianshipin_name"
                    android:textColor="@color/text_color_selector" />

                <TextView
                    style="@style/style_4"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_zero"
                    android:layout_weight="1.77"
                    android:gravity="right|center_vertical" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/layout_zero"
            android:layout_height="match_parent"
            android:layout_weight="5.61"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_shoucanggengxin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_zero"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/edit_vertical_margin"
                android:paddingTop="@dimen/edit_vertical_margin"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/menubg"
                    android:paddingRight="50dp" >

                    <TextView
                        android:layout_width="@dimen/layout_zero"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/theme_name_margin"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/shoucang_update_name"
                        android:textColor="@color/text_normal"
                        android:textSize="@dimen/menu_up_text_size" />

                    <TextView
                        android:layout_width="@dimen/layout_zero"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text="1/1"
                        android:textColor="@color/time_color"
                        android:textSize="@dimen/jishu_text_size" />
                </LinearLayout>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_zero"
                android:layout_weight="15" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="50dp" >

                        <com.joyplus.tv.ui.MyGridView
                            android:id="@+id/gv_tv_show_shoucang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:descendantFocusability="beforeDescendants"
                            android:numColumns="5" >
                        </com.joyplus.tv.ui.MyGridView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_qitadianshiju"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/edit_vertical_margin"
                        android:layout_marginTop="@dimen/edit_vertical_margin"
                        android:background="@color/menu_bg"
                        android:orientation="horizontal"
                        android:paddingRight="50dp"
                        android:visibility="visible" >

                        <TextView
                            android:layout_width="@dimen/layout_zero"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/theme_name_margin"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/qitazongyi_name"
                            android:textColor="@color/text_normal"
                            android:textSize="@dimen/menu_up_text_size" />

                        <TextView
                            android:layout_width="@dimen/layout_zero"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:text="1/678"
                            android:textColor="@color/time_color"
                            android:textSize="@dimen/jishu_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="50dp"
                        android:visibility="visible" >

                        <com.joyplus.tv.ui.MyGridView
                            android:id="@+id/gv_qitadianshiju"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:numColumns="5" >
                        </com.joyplus.tv.ui.MyGridView>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>