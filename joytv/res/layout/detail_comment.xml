<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/movie_bg"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingTop="15dp" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_zero"
        android:layout_weight="0.8"
        layout="@layout/show_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_zero"
        android:layout_weight="6"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="@dimen/layout_zero"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/empty_margin_right"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imageViewBarCode"
                android:layout_width="132dp"
                android:layout_height="188dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY" />

         

            <RelativeLayout
                android:id="@+id/relativeLayout_Dou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewBarCode"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_off" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imageView2"
                    android:src="@drawable/star_off" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imageView3"
                    android:src="@drawable/star_off" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imageView4"
                    android:src="@drawable/star_off" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imageView5"
                    android:src="@drawable/star_off" />
            </RelativeLayout>
             <TextView
                android:id="@+id/textView_dou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/imageView7"
                android:layout_below="@+id/imageViewBarCode"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/imageView7"
                android:text="7.3"
                android:textColor="@color/menu_bg_select_ok"
                android:textSize="16sp" />
             
               <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/imageViewBarCode"
                android:layout_marginTop="10dp"
                android:background="@drawable/douban" />

           
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/layout_zero"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="6"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="西游降魔篇"
                android:textColor="@color/menu_bg_select_ok"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView1"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@+id/textView1"
                android:text="的影评"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ListView
                android:id="@+id/listView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView1" >
            </ListView>
           

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="1/8"
                android:textColor="@color/text_pt"
                android:textSize="16sp" 
                android:visibility="gone"/>

            <ScrollView
                android:id="@+id/scrollViewItemDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                 android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView1" 
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                     <TextView
                android:id="@+id/listViewItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:textColor="@color/white"
                 android:textSize="16sp" />
                        <TextView
                android:id="@+id/listViewItemDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:textSize="16sp" />
                </LinearLayout>
            </ScrollView>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>