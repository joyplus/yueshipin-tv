<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/movie_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="30dp"
        layout="@layout/show_head" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:paddingLeft="50dp" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_zero"
                android:layout_weight="6.623"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="33dp"
                    android:paddingRight="8dp" >

                    <include layout="@layout/show_pic_rating_item_zongyi" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:paddingLeft="25dp"
                    android:paddingRight="30dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="@dimen/layout_zero"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <TextView
                                android:id="@+id/text_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:singleLine="true"
                                android:textColor="@color/text_bg_foucs"
                                android:textSize="25dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/layout_zero"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right|bottom"
                            android:visibility="invisible" >

                            <include
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                layout="@layout/show_timeover_item" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" >

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/xiangqing_zongyi_zhuchi"
                            android:textColor="@color/hot_content_notice"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/text_directors"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="@color/hot_content_content"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" >

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/xiangqing_zongyi_shoubo"
                            android:textColor="@color/hot_content_notice"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/text_starts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="@color/hot_content_content"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/xiangqing_zongyi_jianjie"
                        android:textColor="@color/hot_content_notice"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/text_introduce"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:lineSpacingExtra="5dip"
                        android:maxLines="4"
                        android:textColor="@color/hot_content_content"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_zero"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="33dp"
                    android:paddingRight="8dp" >

                    <LinearLayout
                        android:layout_width="@dimen/layout_zero"
                        android:layout_height="wrap_content"
                        android:layout_weight="4.8" >

                        <Button
                            android:id="@+id/bt_xiangqingding"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/xiangqing_button_selector"
                            android:drawableLeft="@drawable/ding_selector"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="8888"
                            android:textColor="@color/ding_selector"
                            android:textSize="17dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/layout_zero"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/layout_zero"
                        android:layout_height="wrap_content"
                        android:layout_weight="4.8" >

                        <Button
                            android:id="@+id/bt_xiangqing_xiai"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/xiangqing_button_selector"
                            android:drawableLeft="@drawable/xiai_selector"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="8888"
                            android:textColor="@color/ding_selector"
                            android:textSize="17dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/layout_zero"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp"
                    android:paddingRight="30dp" >

                    <LinearLayout
                        android:layout_width="@dimen/layout_zero"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.96"
                        android:gravity="center"
                        android:paddingRight="10dp" >

                        <LinearLayout
                            android:id="@+id/ll_xiangqing_bofang_gaoqing"
                            android:layout_width="@dimen/layout_zero"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:background="@drawable/xiangqing_button_selector"
                            android:clickable="true"
                            android:focusable="true"
                            android:longClickable="true"
                            android:paddingLeft="4dp" >

                            <Button
                                android:id="@+id/bt_xiangqing_bofang"
                                android:layout_width="@dimen/layout_zero"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:clickable="false"
                                android:gravity="left|center_vertical"
                                android:longClickable="false"
                                android:paddingLeft="3dp"
                                android:text="@string/xiangqing_bofang"
                                android:textColor="@color/text_foucs"
                                android:textSize="17dp" />

                            <Button
                                android:id="@+id/bt_xiangqing_gaoqing"
                                android:layout_width="@dimen/layout_zero"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="2"
                                android:background="@android:color/transparent"
                                android:clickable="false"
                                android:drawableRight="@drawable/icon_play"
                                android:gravity="left|center_vertical"
                                android:longClickable="false"
                                android:paddingRight="4dp"
                                android:text="@string/gaoqing_chaogaoqing"
                                android:textColor="@color/text_foucs"
                                android:textSize="17dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/layout_zero"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:visibility="invisible" >

                        <Button
                            android:id="@+id/bt_xiangqing_xiazai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/btn_unuse"
                            android:gravity="center"
                            android:text="@string/xiangqing_xiazai"
                            android:textSize="17dp"
                            android:visibility="invisible" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/layout_zero"
                        android:layout_height="match_parent"
                        android:layout_weight="2" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/layout_zero"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical" >

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:visibility="invisible" />

                        <Button
                            android:id="@+id/bt_xiangqing_yingping"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/yingping_button_selector"
                            android:gravity="center"
                            android:text="@string/xiangqing_yingping"
                            android:textColor="@color/text_foucs"
                            android:textSize="17dp"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_xiangqing_tuijiandianying"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_zero"
                android:layout_weight="6.23"
                android:background="@drawable/bg_teat_repeat"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/rl_xiangqing_hotline"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" >

                    <TextView
                        android:id="@+id/tv_hotline_1"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_marginTop="7dp"
                        android:background="@color/hot_line" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@id/rl_xiangqing_hotline"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="15dp" >

                        <ImageView
                            android:id="@+id/arrow_left"
                            android:layout_width="15dp"
                            android:layout_height="30dp"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:src="@drawable/arrow_left" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <HorizontalScrollView
                                android:id="@+id/scrollview"
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:scrollbars="@null" >

                                <LinearLayout
                                    android:id="@+id/layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:orientation="horizontal" >
                                </LinearLayout>
                            </HorizontalScrollView>

                            <TableLayout
                                android:id="@+id/table"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginTop="15dp" >
                            </TableLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/arrow_right"
                            android:layout_width="15dp"
                            android:layout_height="30dp"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:src="@drawable/arrow_right" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>