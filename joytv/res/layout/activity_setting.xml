<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#08111a"
    android:orientation="vertical">
	<include layout="@layout/show_head"
		    android:layout_width="fill_parent"
		    android:layout_height="65dp"
	        android:layout_marginLeft="30dp"
		    />
	<LinearLayout android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="horizontal">
	    <LinearLayout android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1">
	    </LinearLayout>
	    <LinearLayout android:layout_width="0dp"
	        android:layout_height="fill_parent" 
	        android:orientation="vertical"
	        android:layout_weight="5">
	        <LinearLayout android:layout_width="fill_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1">
	            <TextView android:layout_width="fill_parent"
		        android:paddingLeft="15dp"
			    android:layout_height="wrap_content"
			    android:gravity="center_vertical"
			    android:textSize="30sp"
			    android:layout_gravity="bottom"
			    android:text="设置"
			    android:textColor="@color/common_title_selected"
			    android:background="@drawable/menubg"/>
	        </LinearLayout>
	        
	        <LinearLayout android:layout_width="fill_parent"
	            android:layout_height="0dp"
	            android:orientation="horizontal"
	            android:layout_weight="5">
	            <LinearLayout android:layout_width="0dp"
	                android:layout_height="fill_parent"
	                android:orientation="vertical"
	                android:layout_weight="4">
		                <LinearLayout android:layout_width="fill_parent"
		                android:layout_height="0dp"
		                android:id="@+id/bandLayout"
		                android:background="@drawable/historty_listitem_drawable_selector"
		                android:orientation="horizontal"
		                android:focusable="true"
		                android:focusableInTouchMode="true"
		                android:gravity="center_vertical"
		                android:layout_weight="1">
		                <ImageView android:layout_width="80dp"
		                    android:layout_height="80dp"
		                    android:layout_marginLeft="15dp"
		                    android:scaleType="fitXY"
		                    android:id="@+id/user_avatar"
		                    android:src="@drawable/avatar_defult"/>
		                <LinearLayout android:layout_width="fill_parent"
		                    android:layout_height="fill_parent"
		                    android:gravity="center_vertical"
		                    android:paddingLeft="15dp"
		                    android:orientation="vertical">
		                    <TextView android:layout_width="fill_parent"
		                        android:layout_height="wrap_content"
		                        android:textColor="@color/hot_content_notice"
		                        android:textSize="20sp"
		                        android:id="@+id/user_name"/>
		                    <TextView android:layout_width="fill_parent"
		                        android:layout_height="wrap_content"
		                        android:textSize="18sp"
		                        android:textColor="@color/hot_content_notice"
		                        android:id="@+id/user_notice"/>
		                </LinearLayout>
		            </LinearLayout>
		             <ImageView android:layout_width="fill_parent"
		                android:layout_height="1px"
		                android:background="@drawable/line"/>
		            <TextView android:layout_width="fill_parent"
		                android:layout_height="0dp"
		                android:id="@+id/faq_layout"
		                 android:background="@drawable/historty_listitem_drawable_selector"
		                android:layout_weight="1"
		                android:gravity="center_vertical"
		                android:focusable="true"
		                android:focusableInTouchMode="true"
		                android:textColor="@color/hot_content_notice"
		                android:paddingLeft="15dp"
		                android:textSize="25sp"
		                android:text="常见问题"/>
		            <ImageView android:layout_width="fill_parent"
		                android:layout_height="1px"
		                android:background="@drawable/line"/>
		            <TextView android:layout_width="fill_parent"
		                android:layout_height="0dp"
		                android:id="@+id/declaration_layout"
		                 android:background="@drawable/historty_listitem_drawable_selector"
		                android:layout_weight="1"
		                android:gravity="center_vertical"
		                android:focusable="true"
		                android:focusableInTouchMode="true"
		                android:textColor="@color/hot_content_notice"
		                android:paddingLeft="15dp"
		                android:textSize="25sp"
		                android:text="免责声明"/>
		            <ImageView android:layout_width="fill_parent"
		                android:layout_height="1px"
		                android:background="@drawable/line"/>
		            <TextView android:layout_width="fill_parent"
		                android:layout_height="0dp"
		                android:id="@+id/about_layout"
		                android:background="@drawable/historty_listitem_drawable_selector"
		                android:layout_weight="1"
		                android:gravity="center_vertical"
		                android:focusable="true"
		                android:textColor="@color/hot_content_notice"
		                android:paddingLeft="15dp"
		                android:textSize="25sp"
		                android:focusableInTouchMode="true"
		                android:text="关于我们"/>
		            <LinearLayout android:layout_width="fill_parent"
		                android:layout_height="0dp"
		                android:orientation="horizontal"
		                android:layout_weight="1">
		            </LinearLayout>
		        </LinearLayout>
		        <LinearLayout android:layout_width="0dp"
		            android:layout_height="fill_parent"
		            android:orientation="vertical"
		            android:paddingTop="20dp"
		            android:paddingLeft="15dp"
		            android:paddingRight="30dp"
		            android:gravity="center_horizontal"
		            android:layout_weight="1">
		            <TextView android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textColor="@color/hot_content_notice"
		                android:textSize="20sp"
		                android:text="悦视频"/>
		            <ImageView android:layout_width="90dp"
		                android:layout_height="90dp"
		                android:scaleType="fitXY"
		                android:src="@drawable/erweima_yueshipin"/>
		            <TextView android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textColor="@color/hot_content_notice"
		                android:textSize="18sp"
		                android:text="app.joyplus.tv"/>
		            <TextView android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginTop="50dp"
		                android:textColor="@color/hot_content_notice"
		                android:textSize="20sp"
		                android:text="微信公众账号"/>
		            <ImageView android:layout_width="90dp"
		                android:layout_height="90dp"
		                android:scaleType="fitXY"
		                android:src="@drawable/erweima_weixin"/>
		            <TextView android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textColor="@color/hot_content_notice"
		                android:textSize="18sp"
		                android:text="悦视频"/>
		            <TextView android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textColor="@color/hot_content_notice"
		                android:layout_marginTop="10dp"
		                android:textSize="18sp"
		                android:text="\t如果您遇到什么问题或者有什么建议，请用微信扫描二维码或搜索&quot;悦视频&quot;。我们时刻倾听您的声音。"/>
		        </LinearLayout>
	       </LinearLayout>
	    </LinearLayout>
	</LinearLayout>
</FrameLayout>