<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Yangzhg -->
    <style name="style_1">
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="style_2" parent="style_1">
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="style_3">
        <item name="android:layout_marginBottom">@dimen/menu_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/menu_vertical_margin</item>
    </style>

    <style name="style_4" parent="style_3">
        <item name="android:paddingRight">@dimen/menu_horizontal_padding</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/menu_up_text_size</item>
    </style>

    <style name="style_5">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:drawableLeft">@drawable/button_left_drawable_selector</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textColor">@color/text_color_selector</item>
        <item name="android:textSize">@dimen/menu_up_text_size</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="style_6" parent="style_4">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/text_drawable_selector</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="style_7">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textColor">@color/text_color_selector</item>
        <item name="android:textSize">@dimen/menu_up_text_size</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/in</item>
        <item name="android:windowExitAnimation">@anim/out</item>
    </style>
    <!-- Yangzhg -->


    <!-- ZhangQibo -->
	<style name="keyboardButton">
        <item name="android:background">@drawable/bg_button_keyboard_selector</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/keyboard_text_color_selector</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <!-- ZhangQibo -->


    <!-- Yu -->
    <color name="darker_transparent">#C1000000</color>
